@page "/favorites"
@inject IUsersService UsersService
@inject MicrosoftIdentityConsentAndConditionalAccessHandler ConsentHandler
@attribute [Authorize]
<PageTitle>Favorites</PageTitle> 

<div class="container-fluid jumbotron-bg-img custom-font">
    <div class="row align-items-center h-100 text-center">
        <div class="col-lg-12 col-xl-12 col-md-12 col-sm-12 mx-auto">
            <div class="ingredient-display header">
                <h1 class="text-center m-3 p-3">
                    <AuthorizeView>
                        <Authorized>
                            @context.User.Claims.FirstOrDefault(c => c.Type.Contains("extension_FirstName"))?.Value's Favorites
                        </Authorized>
                        <NotAuthorized>
                            NotAuthorized
                        </NotAuthorized>
                    </AuthorizeView>    
                </h1>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <RecipeCards RecipesList="@favoriteRecipes" />
</div>

@code {
    private List<int>? userFavorites;
    private List<Recipe> favoriteRecipes;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            userFavorites = await UsersService.GetUserFavoritesAsync();
            favoriteRecipes = await UsersService.GetUserFavoriteRecipesAsync();
        }
        catch (Exception ex)
        {
            ConsentHandler.HandleException(ex);
        }
    }
}
